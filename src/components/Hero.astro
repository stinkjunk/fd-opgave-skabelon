---
import { Image } from "astro:assets";
import Services from "./Services.astro";
import CEOImage from "@assets/images/ceo.png";
---

<section class="hero">
  <div class="hero-content">
    <h1>Empowering Your Business Growth</h1>
    <p>
      Discover tailored strategies and expert insights to take your business to
      the next level. Let us help you navigate challenges and achieve
      sustainable success.
    </p>
    <a href="#0" class="cta3">Book a Meeting</a>
  </div>
  <Image src={CEOImage} alt="CEO" />

  <Services />
</section>

<style>
  /* Styles her */
  @layer components {
    .hero {
      background-color: var(--primary03);
      /* padding: 2rem; */
      display: grid;
    }
  }
  .hero {
    grid-template-columns: subgrid;
    grid-column: span 4;
    img {
      grid-column: 3 / 5;
    }

    .hero-content {
      grid-column: 2;
    }
    & > * {
      /*Services.astro*/
      grid-column: 2 / 4;
    }
  }
</style>
