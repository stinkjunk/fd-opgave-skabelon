---
import { Image } from "astro:assets";
import Services from "./Services.astro";
import CEOImage from "@assets/images/ceo.png";
---

<section class="hero">
  <div class="hero-content">
    <h1>Empowering Your Business Growth</h1>
    <p>
      Discover tailored strategies and expert insights to take your business to
      the next level. Let us help you navigate challenges and achieve
      sustainable success.
    </p>
    <a href="#0" class="cta3">Book a Meeting</a>
  </div>
  <div class="wrapper">
    <Image src={CEOImage} alt="CEO" />
  </div>

  <Services />
</section>

<style>
  /* Styles her */
  @layer components {
    .hero {
      /* background-color: var(--primary03); */
      /* padding: 2rem; */
      display: grid;
    }
  }
  .hero {
    --textcol1: var(--secondary02);
    container: heroSec / inline-size;
    grid-template-columns: subgrid;
    grid-template-rows: 2fr 0.75fr 0.75fr;
    grid-column: span 4;
    &::before {
      content: "";
      grid-column: 1 / 3;
      grid-row: 1 / 3;
      background-color: var(--primary03);
    }
    &::after {
      content: "";
      grid-column: 1;
      grid-row: 1 / 3;
      background-image: url("../icons/pattern.svg");
      background-size: 80%;
      background-repeat: no-repeat;
      background-position: center;
      transform: translateX(-50%);
    }

    .wrapper:has(img) {
      grid-column: 3 / 5;
      grid-row: 1 / 3;
    }
    /* img {
      grid-column: 3 / 5;
      grid-row: 1 / 3;
    } */

    .hero-content {
      color: var(--textcol1);
      grid-column: 2;
      grid-row: 1;
      /* background-color: var(--primary03); */

      display: flex;
      flex-direction: column;
      justify-content: flex-end;
      gap: var(--space-s);
      padding-right: var(--space-l);
      padding-bottom: var(--space-m);

      a.cta3 {
        max-width: 20ch;
        padding: var(--space-xs);
      }
    }

    /*Services.astro*/
    & > * {
      grid-column: 2 / 4;
      grid-row: 2 / 4;
    }
    ul {
      /* background-color: red !important; */
      /* transform: translateY(80%); */
    }
  }

  @media (max-width: 880px) {
    .hero {
      grid-template-rows: auto;
      .wrapper:has(img) {
        height: 50vh;
        grid-column: 1 / 5;
        grid-row: 1;
      }

      &::before {
        content: "";
        grid-column: 1 / 5;
        grid-row: 1 / 3;
        background-color: var(--primary03);
      }
      .hero-content {
        height: 40vh;
        grid-row: 2;
        grid-column: 2 / 4;
        padding: var(--space-m) 0;
        gap: var(--space-xs);
        justify-content: center;
        /* background-color: var(--primary03); */
        & > * {
          grid-column: 2 / 3;
          grid-row: 1;
          padding: var(--space-s);
        }

        & > *:not(a) {
          padding: 0;
        }
      }

      /*Services.astro*/
      & > * {
        grid-row: 3;
      }

      &::after {
        background-image: none;
      }
    }
    @media (max-width: 480px) {
      .hero {
        .wrapper:has(img) {
          height: 30vh;
        }
        .hero-content {
          height: 60vh;
        }
      }
    }
  }
</style>
