---
const { name, class: className = "icon" } = Astro.props;

let IconComponent;
try {
  IconComponent = await import(`../../icons/${name}.svg`).then(
    (module) => module.default
  );
} catch (error) {
  console.warn(`Icon "${name}" not found`);
  IconComponent = null;
}
---

{IconComponent && <IconComponent class={className} />}
