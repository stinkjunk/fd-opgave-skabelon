<div class="newsLetter">
  <div class="content">
    <div class="text">
      <h2>Subscribe to our newsletter</h2>
      <p>Build stronger Customer Relationships with <span>Consultalk</span></p>
    </div>
    <div class="subscribe">
      <input type="text" placeholder="Your email address" />
      <button class="cta2">Subscribe</button>
    </div>
  </div>
</div>

<style>
  .newsLetter {
    background-color: var(--primary03);
    --textcol1: var(--secondary02);
    --textcol2: var(--secondary02);
    border-radius: 20px;
    overflow: hidden;
    min-height: 20vh;
    padding: var(--space-m) 0;
    grid-column: 2 / 4;

    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;

    .content {
      width: 60cqw;
      position: relative;
      display: flex;
      z-index: 20;
      .subscribe {
        margin-left: auto;
        display: flex;
        input {
          margin-left: auto;
          margin-right: var(--space-s);
          padding: 0 var(--space-s);
          background-color: var(--secondary02);
          border-radius: 4px;
        }
      }
    }

    &::before,
    &::after {
      content: "";
      position: absolute;
      right: 0;
      height: 200%;
      aspect-ratio: 1 / 1;
    }
    &::before {
      top: 0;

      background-image: url(../icons/pattern.svg);
      background-repeat: no-repeat;
      background-size: 100% auto;
      transform: translateX(40%) translateY(-73%) rotate(43.2deg) scale(0.9);
      opacity: 0.5;
    }
    &::after {
      bottom: 0;
      background-color: var(--primary02);
      border-radius: 20px;
      transform: translateX(33%) translateY(80%) rotate(55.2deg) scale(0.8);
    }
    @media (max-width: 1400px) {
      .content {
        flex-direction: column;
        .subscribe {
          &,
          input {
            margin-left: 0;
          }
          margin-top: var(--space-s);
        }
        @media (max-width: 540px) {
            .subscribe {
                flex-direction: column;
                input {
                    width: 100%;
                    padding: var(--space-2xs) var(--space-s);
                    margin-bottom: var(--space-xs);
                }
                button {
                    margin-right: auto;
                    padding: var(--space-s);
                }
            }
        }
      }
    }
      @media (max-width: 540px) {

        &::before,
        &::after {
            opacity: 0.2;
        }
       }
  }
</style>
