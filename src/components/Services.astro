import servicesData from "@data/services.json";
console.log(servicesData);
---

<ul>
  {
    servicesData.services.map((service) => (
      <li>
        <h2>{service.title}</h2>
        <p>{service.description}</p>
        <a href="#0" class="cta1">
          {service.buttonText}
        </a>
      </li>
    ))
  }
</ul>

<style>
  @layer components {
    ul {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      padding: 0;
      gap: var(--space-m);

      li {
        padding: var(--space-m);
        list-style: none;
        box-sizing: border-box;
        display: flex;
        flex-direction: column;
        /* justify-content: space-between; */
        /* gap: var(--space-xs); */
        /* height: 45%; */
        color: var(--secondary02);

        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        background: rgba(38, 38, 38, 0.9);
        backdrop-filter: blur(16px);
        h2 {
          margin-bottom: var(--space-2xs);
        }
        p {
          margin-bottom: var(--space-xs);
        }
        a {
          margin-top: auto;
          max-width: 200px;
          padding: var(--space-s);
        }
      }
    }
  }

  @container heroSec (width < 880px) {
    /* li p {
      color: red;
    } */

    ul {
      display: flex;
      flex-direction: column;
      padding: 0;
      margin: var(--space-xl) 0;

      border-radius: 20px;
      /* border: 1px solid rgba(255, 255, 255, 0.2);
      background: rgba(38, 38, 38, 0.9);
      backdrop-filter: blur(16px);
      width: 100%; */
      gap: 0;

      li {
        padding: var(--space-xs);
        background: transparent;
        border: none;
        backdrop-filter: none;
        border-radius: 0;

        h2,
        p {
          color: var(--primary03);
        }

        a.cta3 {
          max-width: 20ch;
          padding: var(--space-xs);
        }
        &:nth-child(even){
          > * {
            text-align: right;
          }
          a{
            margin-left: auto;
          }
        }
        &:not(:first-child) {
          border-top: 1px solid rgba(0, 0, 0, 0.363);
          margin-top: var(--space-m);

        }
      }
    }
  }
</style>
